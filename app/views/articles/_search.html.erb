<div class='search-box'>
  <%= search_form_for @search do |f| %>

      <%= f.label :target_site, '鍛えられる部位' %>
      <%= f.select :target_site_eq, options_for_select({ 指定なし: '', 大胸筋: '大胸筋', 肩: '肩', 腕: '腕', 腹筋: '腹筋', 背中: '背中', 脚: '脚'}, '')%>
      
    <%= f.label :検索 %>
    <%= f.search_field :title_or_need_or_recommended_target_cont, placeholder: 'キーワードを入力' %>

    <%= f.submit '検索'%>
  <% end %>
</div>
