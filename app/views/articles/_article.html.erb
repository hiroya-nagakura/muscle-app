<div class='col-lg-6'>
  <div class='article-card'>
    <div class='card-title'>
      <h3><%= article.title %></h3>
    </div>
    <div class='card-wrapper'>
      <div class='card-top'>
        <div class='card-content'>
          　<%= strip_tags(article.content.to_s).truncate(70) %>
          <%= link_to 'もっと読む',article%>
        </div>
      </div>
      <div>
        <ul class='tag-list'>
          <% if article.tags.present? %>
            <% article.tags.each do |tag| %>
              <li class='tag-item tag-style'><%= tag.name%></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class='card-bottom'>
        <div class='card-info'>
          <div id="favorites_buttons_<%= article.id %>">
            <%= render 'favorites/favorite', article: article %>
          </div>
          <div class='card-comment'>
            <i class="far fa-comments"></i>
            <%= article.comments.count %>
          </div>
        </div>
        <div class='card-time'>
          <%= article.created_at.to_s(:datetime_jp)%>
          by <%= link_to article.user.user_name,article.user%>
        </div>
      </div>
    </div>
    <div class='card-wrapper'>
      <% if article.target_site_id == 1 %>
        <%= link_to image_tag('chest.png', alt: 'chest', class: 'card-image'), article%>
      <% elsif article.target_site_id == 2 %>
        <%= link_to image_tag('arm.png', alt: 'arm', class: 'card-image'), article%>
      <% elsif article.target_site_id == 3 %>
        <%= link_to image_tag('sholder.png', alt: 'sholder', class: 'card-image'), article%>
      <% elsif article.target_site_id == 4 %>
        <%= link_to image_tag('abs.png', alt: 'abs', class: 'card-image'), article%>
      <% elsif article.target_site_id == 5 %>
        <%= link_to image_tag('back.png', alt: 'back', class: 'card-image'), article%>
      <% elsif article.target_site_id == 6 %>
        <%= link_to image_tag('leg.png', alt: 'leg', class: 'card-image'), article%>
      <% end %>
      <div class='text-center'>
        <p>鍛えられる部位</p>
      </div>
    </div>
  </div>
</div>