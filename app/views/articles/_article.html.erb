<div class='col-lg-4 col-md-6'>
  <div class='article-card'>
    <div class='card-top card-title'>
      <%= link_to article_path(article.id), class: 'link-decoration' do %>
        <h3><%= article.title %></h3>
      <% end %>
    </div>
    <div class='card-middle'>
      <div class='card-middle-wrapper'>
        <div>
          <ul class='tag-list'>
            <% if article.tags.present? %>
              <% article.tags.each do |tag| %>
                <li class='tag-item tag-style'><%= tag.name%></li>
              <% end %>
            <% end %>
          </ul>
        </div>
        <div>
          <div class='card-btn <%= 'signed_in' if user_signed_in? %>'>
            <div id="favorites_buttons_<%= article.id %>" class='col-6'>
            <%= render 'favorites/favorite', article: article %>
            </div>
            <div class='card-comment col-6'>
              <i class="far fa-comments"></i>
              <%= article.comments.count %>
            </div>
          </div>
          <%= link_to article.user, class: 'link-decoration' do %>
            <div class='card-user'>
              <div>
                <% if article.user.image? %>
                  <%= image_tag article.user.image.url, class: 'card-avatar-img' %>
                <% else %>
                  <%= image_tag "/assets/default.png", class: 'card-avatar-img' %>
                <% end %>
              </div>
              <div class='card-user-content'>
                  <span><%= article.user.user_name%></span>
              </div>
            </div>
          <% end %>
          <p>投稿日：<%= article.created_at.to_s(:datetime_jp)%></p>
        </div>
      </div>
      <div class='card-middle-wrapper'>
        <% if article.target_site_id == 1 %>
          <%= image_tag('chest.png', alt: 'chest', class: 'card-image') %>
        <% elsif article.target_site_id == 2 %>
          <%= image_tag('arm.png', alt: 'arm', class: 'card-image') %>
        <% elsif article.target_site_id == 3 %>
          <%= image_tag('sholder.png', alt: 'sholder', class: 'card-image') %>
        <% elsif article.target_site_id == 4 %>
          <%= image_tag('abs.png', alt: 'abs', class: 'card-image') %>
        <% elsif article.target_site_id == 5 %>
          <%= image_tag('back.png', alt: 'back', class: 'card-image') %>
        <% elsif article.target_site_id == 6 %>
          <%= image_tag('leg.png', alt: 'leg', class: 'card-image') %>
        <% end %>
        <div class='text-center'>
          <p>鍛えられる部位</p>
        </div>
      </div>
    </div>
  </div>
</div>