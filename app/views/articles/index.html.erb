<% provide :title, 'メニュー一覧' %>

<div class='container'>
  <h2>メニュー一覧</h2>
  <%= render 'search' %>

  <div class='article'>
    <% if @search_articles %>
      <% if @search_articles.count == 0%>
        <div class = 'no-hit'>
          <h2>一致する項目は見つかりません</h2>
        </div>
      <% else %>
        <%= render @search_articles %>
        <div>
          <%= paginate @search_articles %>
        </div>
      <% end %>
    <% else %>
      <%= render @articles %>
      <div>
        <%= paginate @articles %>
      </div>
    <% end %>
  </div>
</div>