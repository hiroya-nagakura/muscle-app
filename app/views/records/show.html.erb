<% provide :title, "#{@record.start_time.month}月#{@record.start_time.day}日のメニュー" %>

<div class='container'>
  <h2>
    <%= @record.start_time.month%>月<%= @record.start_time.day%>日のメニュー
  </h2>
  <div class='record-table-wrapper'>
    <table class='record-table'>
      <thead>
        <tr>
          <th>メニュー</th>
          <th class='text-center'>重量</th>
          <th class='text-center'>回数</th>
          <th class='text-center'>セット数</th>
        </tr>
      </thead>
      <tbody>
        <% @record.traning_menus.each do |traning_menu| %>
          <tr>
            <td><%= traning_menu.menu %></td>
            <td class='text-center'><%= traning_menu.weight %><span> kg</span></td>
            <td class='text-center'><%= traning_menu.rep %><span> rep</span></td>
            <td class='text-center'><%= traning_menu.set %><span> set</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>