<% provide :title, 'トレーニング記録' %>

<div class='container-fluid'>
  <% if user_signed_in? %>
    <% if current_user == @user %>
      <%= link_to 'トレーニングメニューを記録する',new_user_record_path(@user)%>
    <% end %>
  <% end %>
    <%= month_calendar events: @records do |date, records| %>
    <%= date.day %>

    <% records.each do |record| %>
      <div>
        <%= link_to '詳細',user_record_path(user_id: @user, id: record.id) %>
      </div>
    <% end %>
  <% end %>
</div>