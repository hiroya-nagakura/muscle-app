<% if user_signed_in?%>
  <% if current_user.already_favorite?(article) %>
    <%= link_to article_favorite_path(article_id: article.id, id: article.favorites[0].id), method: :delete, class: 'btn-default blue-outline-btn already-favorite', remote: true do%>
      <i class='fas fa-thumbs-up'>いいね！</i>
      <%= article.favorites.count%>
    <% end %>
  <% else %>
    <%= link_to article_favorites_path(article_id: article.id), method: :post, class: 'btn-default blue-outline-btn', remote: true do%>
      <i class='far fa-thumbs-up'>いいね！</i>
      <%= article.favorites.count%>
    <% end %>
  <% end %>
<% else %>
  <%= link_to article_favorites_path(article_id: article.id), method: :post, class: 'btn-default blue-outline-btn' do%>
      <i class='far fa-thumbs-up'>いいね！</i>
      <%= article.favorites.count%>
    <% end %>
<% end %>