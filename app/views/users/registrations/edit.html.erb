<div class='container'>
  <div class='user_form'>
    <h2>プロフィール編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :user_name, 'ユーザー名' %><br />
        <%= f.text_field :user_name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :image,'プロフィール画像' %>
          <% if @user.image? %>
            <%= image_tag @user.image.url %>
          <% else %>
            <%= image_tag "/assets/default.png", :size => '100x100' %>
          <% end %>
        <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
      </div>

      <div class="field form-group">
        <%= f.label :email, 'メールアドレス' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password, '新しいパスワード' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <i>(変更しない場合は空白のままにしてください)</i>
        
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, '新しいパスワード確認用' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password, '現在のパスワード' %><br /> 
        <i>(パスワードを変更する場合は必要になります)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= link_to "キャンセル", :back, class: 'btn btn-outline-secondary'%>
        <%= f.submit "変更を保存する", class: 'btn btn-primary ' %>
      </div>
    <% end %>
  </div>
</div>