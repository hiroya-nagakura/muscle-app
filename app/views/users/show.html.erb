<% provide :title, 'マイページ' %>

<div class='container'>
  <div class='row prof-wrapper'>
    <div class='prof-img'>
      <% if @user.image? %>
        <%= image_tag @user.image.url, class: 'avatar-img' %>
      <% else %>
        <%= image_tag "/assets/default.png", class: 'avatar-img' %>
      <% end %>
    </div>
    <div class='prof-content'>
      <div class='prof-name'>
        <%= @user.user_name%>
      </div>
      <div class='prof-menu'>
        <%= render "relationships/follow_button", user: @user %>
        <% if user_signed_in? %>
          <% if current_user.user_name == @user.user_name%>
            <%= link_to 'プロフィール編集',edit_user_registration_path(@user), class: 'btn btn-sm btn-outline-secondary'%>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class='management-link'>
    <%= link_to 'トレーニング記録', user_records_path(@user), class: 'btn btn-sm prof-btn'%>
    <%= link_to '体重記録', user_bodyweights_path(@user), class: 'btn btn-sm prof-btn'%>
  </div>

  <ul class='nav nav-tabs justify-content-center prof-nav'>
    <li class ='nav-item prof-tab'>
      <a href='#prof-articles' class='nav-link active prof-tab-color' data-toggle='tab' role="tab">
        <span class='tab-name'>投稿</span>
        <div>
          <%= @articles.count%>
        </div>
      </a>
    </li>
    <li class ='nav-item prof-tab'>
      <a href='#prof-followings' class='nav-link prof-tab-color' data-toggle='tab' >
        <span class='tab-name'>フォロー</span>
        <div>
          <%= @followings.count%>
        </div>
      </a>
    </li>
    <li class ='nav-item prof-tab'>
      <a href='#prof-followers' class='nav-link prof-tab-color' data-toggle='tab' >
        <span class='tab-name'>フォロワー</span>
        <div>
          <%= @followers.count%>
        </div>
      </a>
    </li>
    <li class ='nav-item prof-tab'>
      <a href='#prof-favorites' class='nav-link prof-tab-color' data-toggle='tab' >
        <span class='tab-name'>いいね！</span>
        <div>
          <%= @favorite_articles.count%>
        </div>
      </a>
    </li>
  </ul>

  <div class='tab-content'>
    <div id='prof-articles' class='tab-pane active'>
      <% if @articles.any? %>
        <div class='article'>
          <%= render @articles%>
        </div>
      <% else %>
        <div class='no-content'>
          投稿したメニューがありません
        </div>
      <% end %>
    </div>
    <div id='prof-followings' class='tab-pane'>
      <% if @followings.any? %>
        <div class='prof-follows'>
          <%= render 'follows', users: @followings%>
        </div>
      <% else %>
        <div class='no-content'>
          誰もフォローしていません
        </div>
      <% end %>
    </div>
    <div id='prof-followers' class='tab-pane'>
      <% if @followers.any? %>
        <div class='prof-follows'>
          <%= render 'follows', users: @followers%>
        </div>
      <% else %>
        <div class='no-content'>
          フォローされていません
        </div>
      <% end %>
    </div>
    <div id='prof-favorites' class='tab-pane'>
      <% if @favorite_articles.any? %>
        <div class='article'>
          <%= render 'favorites', favorite_articles: @favorite_articles%>
        </div>
      <% else %>
        <div class='no-content'>
          いいね！したメニューがありません
        </div>
      <% end %>
    </div>
  </div>
</div>